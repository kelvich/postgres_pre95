CFLAGS+= -I${.CURDIR}/../../backend

.if ${PORTNAME} == "ultrix4"
CFLAGS+= -G 0 -DNOFIXADE
.endif

.SUFFIXES: .source .pq

.source.pq:
	rm -f $*.pq; \
	if [ "${.CURDIR}" = ".." ]; then \
		C="`pwd`/"; \
	else \
		C=""; \
	fi; \
	sed -e "s:_CWD_:$$C${.CURDIR}:g" \
	    -e "s/_USER_/$$USER/g" < ${.CURDIR}/$*.source > $*.pq
